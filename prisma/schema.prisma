generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Prediction {
  id         String   @id @default(uuid())
  userId     String
  userName   String
  matchId    Int
  prediction String
  createdAt  DateTime @default(now())
  score      Int      @default(0)
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now()) // âœ… Add timestamp for user registration
}